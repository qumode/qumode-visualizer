{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "build",
        "declaration": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "downlevelIteration": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "build", "./src/**/*.test.ts"]
}
